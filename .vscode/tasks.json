{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile and run",
            "type": "shell",
            "command": "g++",
            "args": [
                "\"${file}\"",
                "-o",
                "\"${fileDirname}/${fileBasenameNoExtension}.exe\""
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Compile current file"
        },
        {
            "label": "run",
            "type": "shell",
            "dependsOn": "compile and run",
            "command": "\"${fileDirname}/${fileBasenameNoExtension}.exe\"",
            "problemMatcher": []
        }
    ]
}
